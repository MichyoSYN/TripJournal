<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/buttonSelect"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/buttonSelectFile"
        android:textSize="20sp"
        android:textColor="#219ac6"
        android:background="@drawable/button" />

    <TextView
        android:id="@+id/fileText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonSelect"
        android:textColor="#219ac6"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imageViewShow"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/fileText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/imageAddContent"
        android:src="@drawable/article" />

    <Button
        android:id="@+id/buttonCancelPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imageViewShow"
        android:layout_below="@+id/imageViewShow"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_add" />

    <Button
        android:id="@+id/buttonConfirmPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonCancelPic"
        android:layout_alignBottom="@+id/buttonCancelPic"
        android:layout_alignLeft="@+id/imageViewShow"
        android:background="@drawable/button_add" />

    <TextView
        android:id="@+id/textViewCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/darkRed"
        android:textSize="20sp"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="75dp"
        android:text="@string/buttonCancel" />

    <TextView
        android:id="@+id/textViewConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/darkRed"
        android:textSize="20sp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="75dp"
        android:text="@string/buttonConfirm" />

</RelativeLayout>  